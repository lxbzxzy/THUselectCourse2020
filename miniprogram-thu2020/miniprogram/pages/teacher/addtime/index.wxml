<view class="page">
<view class="page__bd">

  <view class="page__hd">
    <view class="page__title">添加时间</view>
    <view class="page__desc">提醒：添加课程请选择周次和时间</view>
  </view>

  <view class="weui-cells__title">请选择周次</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__bd"> 
          <picker bindchange="bindPickerChange" value="{{idindex}}" range="{{identityarray}}">
            <view class="weui-select">当前选择：第{{identityarray[idindex]}}周</view>
          </picker>
        </view>
      </view>
  </view>

  <view class="weui-cells__title">请选择日期</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__bd"> 
          <picker bindchange="bindPickerChange2" value="{{idindex2}}" range="{{identityarray2}}">
            <view class="weui-select">当前选择：星期{{identityarray2[idindex2]}}</view>
          </picker>
        </view>
      </view>
  </view>

  <view class="weui-cells__title">请选择时间</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__bd"> 
          <picker bindchange="bindPickerChange3" value="{{idindex3}}" range="{{identityarray3}}">
            <view class="weui-select">当前选择：{{identityarray3[idindex3]}}</view>
          </picker>
        </view>
      </view>
  </view>

  <view class="btn-area">
    <button class="button" bindtap="submit" type="primary">添加时间</button>
  </view>

</view>
</view>